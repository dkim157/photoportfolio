---
import "../styles/global.css";
import { siteConfig } from "../config";
import { Image } from 'astro:assets';
import sky from "../media/sky.jpg";
import star from "../media/star.jpg";
import trail from "../media/trail.jpg";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Photo</title>
  </head>
  <body class="bg-black text-white min-h-screen p-4">
    <a href="/">
      <p class="inline-block cursor-pointer hover:text-gray-400 text-2xl transition-all duration-50 ease-in-out pb-4">Back</p>
    </a>
    <div class="flex flex-col items-center justify-center text-4xl">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-2">
        <Image src={sky} alt="" inferSize/>
        <Image src={star} alt="" inferSize/>
        <Image src={trail} alt="" inferSize/>
      </div>
    </div>
  </body>
</html>